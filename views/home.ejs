<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <link rel="icon" type="image/x-icon" href="/static/images/Favicon.png">
    <link rel="stylesheet" href="/static/stylesheets/home.css" type="text/css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
        integrity="sha512-Avb2QiuDEEvB4bZJYdft2mNjVShBftLdPG8FJ0V7irTLQ8Uo0qcPxh4Plq7G5tGm0rU+1SPhVotteLpBERwTkw=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

<body>

    <nav class="navbar navbar-expand-md navbar-dark p-3" style="background-color: #0f1923;">
        <div class="container">
            <a href="/" class="navbar-brand fs-4 fw-bold">VALORANT</a>
            <ul class="navbar-nav ms-auto d-flex align-items-center">
                <li class="nav-item active" data-bs-toggle="modal" data-bs-target="#exampleModal">
                    <a href="#one" class="nav-link">
                        <p>Hi, <%= name %></p>
                    </a>
                </li>
            </ul>
        </div>
    </nav>

    <!-- Side sticky bar -->
    <div class="sidebar d-flex align-items-center justify-content-center">
        <div class="sidebar-toggle" id="sidebar-toggle">
            <i class="fas fa-chevron-right" id="navtoggle"></i>
        </div>
        <ul class="navbar-nav">
            <li class="nav-item active" data-bs-toggle="modal" data-bs-target="#exampleModal">
                <a href="#one" class="nav-link">
                    <img src="<%= image %>" class="sign-in-image">
                    <%= name %>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#"><i class="fas fa-home me-1"></i>Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#two"><i class="fas fa-person me-1"></i>Agents</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#three"><i class="fas fa-map me-1"></i>Maps</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#four"><i class="fas fa-gun  me-1"></i>Weapons</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#five"><i class="fas fa-brands fa-monero me-1"></i>Game Modes</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#six"><i class="fas fa-layer-group me-1"></i>Competitive Tiers</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/logout"><i class="fa-solid fa-right-from-bracket"></i>Logout</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#"><i class="fas fa-sun me-1"></i>Light mode</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#"><i class="fas fa-moon me-1"></i>Dark mode</a>
            </li>
        </ul>
    </div>
    <!-- Side sticky bar -->

    <!-- Landing wallpaper -->
    <section id="one" class="d-flex align-items-cneter justify-content-start">
    </section>
    <!-- Landing wallpaper -->

    <!--  Agents -->
    <section id="two" class="p-3">
        <div class="container p-3">
            <h2 class="fw-bold text-light mx-5 main-heading" style="font-family: 'ValorantFont', sans-serif;">AGENTS
            </h2>
            <div class="row horizontal-line">
                <hr>
            </div>
            <div class="row p-5">
                <% agents.forEach((agent)=>{ %>
                    <div class="col-6 col-md-3 mt-md-4">
                        <div class="card p-2 agent-card"
                            style="background-color: rgba(7, 109, 210, 0);">
                            <div class="card-img p-3 d-flex align-item-center justify-content-center" style="border:  1px solid #ff4656;">
                                <img src="<%= agent.icon %>" class="w-50 agent-img">
                            </div>
                            <h5 class="card-title text-center agent-name main-color" style="">
                                <%= agent.name %>
                            </h5>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </section>
    <!--  Agents -->

    <!--Maps-->
    <section id="three" class="three p-3">
        <div class="container p-3">
            <h2 class="fw-bold text-light mx-5 main-heading" style="font-family: 'ValorantFont', sans-serif;">MAPS</h2>
            <div class="row horizontal-line">
                <hr>
            </div>
            <div class="row p-3">
                
                <% maps.forEach((map)=>{ %>
                    <div class="col-md-4 mt-md-4">
                        <div class="card map-card" style="background-color: rgba(7, 109, 210, 0);">
                            <img src="<%= map.image %>" class="map-img" alt="No image">
                            <div class="card-body">
                                <h5 class="card-title map-name"><%= map.name %></h5>
                            </div>
                        </div>
                    </div>
                <% }) %>

            </div>
        </div>
    </section>
    <!--Maps-->

    <!-- Weapons -->
    <section id="four" class="p-3">
        <div class="container p-3">
            <h2 class="fw-bold text-light mx-5 main-heading" style="font-family: 'ValorantFont', sans-serif;">WEAPONS
            </h2>
            <div class="row horizontal-line">
                <hr>
            </div>
            <div class="row p-3">
                <% weapons.forEach((weapon)=>{ %>
                    <div class="col-6 col-lg-4 mt-md-4">
                        <div class="card p-2 p-lg-3 weapon-card m-3"
                            style="background-color: rgba(7, 109, 210, 0); border: 2px solid #ff4656;">
                            <h5 class="card-title text-center main-color weapon-name">
                                <%= weapon.name %>
                            </h5>
                            <div class="card-img p-2 d-flex align-item-center justify-content-center">
                                <img src="<%= weapon.image %>" class="w-75 weapon-img">
                            </div>
                        </div>
                    </div>
                    <% }) %>
            </div>
        </div>
    </section>
    <!-- Weapons -->

    <!-- Gamemodes -->
    <section id="five" class="p-3">
        <div class="container p-3">
            <h2 class="fw-bold text-light mx-5 main-heading" style="font-family: 'ValorantFont', sans-serif;">GAMEMODES
            </h2>
            <div class="row horizontal-line">
                <hr>
            </div>
            <div class="row p-3">
                <table class="table text-white d-none d-md-block">
                    <thead>
                        <tr class="table-tr">
                            <th class="table-text">Mode</th>
                            <th class="table-text">Icon</th>
                            <th class="table-text">Description</th>
                            <th class="table-text">Duration</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% gameModes.forEach((mode)=>{ %>
                            <tr>
                                <td>
                                    <% if(mode.displayName){ %>
                                        <p class="mode-text">
                                            <%= mode.displayName %>
                                        </p>
                                        <% }else{ %>
                                            <p class="mode-text">No displayName</p>
                                            <% } %>
                                </td>
                                <td>
                                    <% if(mode.displayIcon){ %>
                                        <img src="<%= mode.displayIcon %>" class="w-50">
                                        <% }else{ %>
                                            <p class="mode-text">No displayIcon</p>
                                            <% } %>
                                </td>
                                <td>
                                    <% if(mode.description){ %>
                                        <p class="mode-text">
                                            <%= mode.description %>
                                        </p>
                                        <% }else{ %>
                                            <p class="mode-text">No description</p>
                                            <% } %>
                                </td>
                                <td>
                                    <% if(mode.duration){ %>
                                        <p class="mode-text">
                                            <%= mode.duration %>
                                        </p>
                                        <% }else{ %>
                                            <p class="mode-text">No duration</p>
                                            <% } %>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
                <% gameModes.forEach((mode)=>{ %>
                    <% if(mode.displayName && mode.description && mode.duration){ %>
                        <div class="card text-light shadow d-block d-md-none border m-2 p-4"
                            style="background-color: rgba(7, 109, 210, 0);">
                            <div class="card-img p-2 d-flex align-item-center justify-content-center">
                                <img src="<%= mode.displayIcon %>" class="w-25">
                            </div>
                            <span>
                                <h5 class="text-center mode-name">
                                    <%= mode.displayName %>
                                </h5>
                            </span>
                            <p class="mode-text"><span class="main-color">Description : </span>
                                <%= mode.description %>
                            </p>
                            <p class="mode-text"><span class="main-color">Duration : </span>
                                <%= mode.duration %>
                            </p>
                        </div>
                        <% } %>
                            <% }) %>
            </div>
        </div>
    </section>
    <!-- Gamemodes -->

    <!-- Tiers -->
    <section id="six" class="p-3">
        <div class="container p-3">
            <h2 class="fw-bold text-light mx-5 main-heading" style="font-family: 'ValorantFont', sans-serif;">
                COMPETITIVE TIERS</h2>
            <div class="row horizontal-line">
                <hr>
            </div>
            <div class="row p-3">
                <% tiers.forEach((tier)=>{ %>
                    <div class="col-6 col-md-4 col-lg-2 mt-md-4">
                        <div class="card p-1 p-lg-3 tier-card"
                            style="--tier-bg: #<%= tier.bg %>; background-color: rgba(7, 109, 210, 0); border: 1px solid #<%= tier.bg %>; ">
                            <div class="card-img p-2 d-flex align-item-center justify-content-center">
                                <img src="<%= tier.icon %>" class="w-25">
                            </div>
                            <h5 class="card-title text-center tier-name" style="color: #<%= tier.bg %>;">
                                <%= tier.tierName %>
                            </h5>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </section>
    <!-- Tiers -->

    <footer id="footer">
        <div class="container">
            <div class="row horizontal-line">
                <hr>
            </div>
            <div class="row p-4 text-center">
                <p class="text text-light">Designed by <span class="main-color"><a class="main-color atag"
                            style="text-decoration: none;" href="https://github.com/midhunkalarikkal">midhun k
                            paniker</a></span></p>
            </div>
        </div>
    </footer>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"
        integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g=="
        crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>

    <script>

        document.addEventListener('DOMContentLoaded', () => {
            const navLinks = document.querySelectorAll('.navbar-nav .nav-link');

            navLinks.forEach(link => {
                link.addEventListener('mouseenter', () => {
                    navLinks.forEach(otherLink => {
                        if (otherLink !== link) {
                            otherLink.classList.add('unhovered');
                        }
                    });
                });

                link.addEventListener('mouseleave', () => {
                    navLinks.forEach(otherLink => {
                        otherLink.classList.remove('unhovered');
                    });
                });
            });
        });

        const sidebar = document.querySelector('.sidebar');
        const toggle = document.querySelector('.sidebar-toggle');
        const navtoggle = document.getElementById('navtoggle')

        navtoggle.classList.add("fa-chevron-right");

        toggle.addEventListener('click', () => {
            console.log("click")
            sidebar.classList.toggle('active');
            if (sidebar.classList.contains('active')) {
                navtoggle.classList.remove("fa-chevron-right");
                navtoggle.classList.add("fa-chevron-left");
            } else {
                navtoggle.classList.remove("fa-chevron-left");
                navtoggle.classList.add("fa-chevron-right");
            }
        });

    </script>

</body>

</html>